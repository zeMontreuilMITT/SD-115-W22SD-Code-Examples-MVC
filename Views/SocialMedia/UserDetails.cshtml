@model User

<h2>@Model.Name</h2>

<ul>
@foreach(Post p in Model.Posts){
    <li>@p.Content</li>
}
</ul>

<button>
    <a asp-action="CreatePost" asp-route-userId=@Model.Id>
        Create a new Post
    </a>
</button>